@model  List<PortfolioProjectNight.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Egitim Listesi ve Islemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Okul Türü</th>
        <th>Okuk Adi</th>
        <th>Bölüm</th>
        <th>Baslama ve Bitirme Yili</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationID</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>
<a href="/Education/CreateEducation" class="btn btn-info">Yeni Yetenek Girisi</a>



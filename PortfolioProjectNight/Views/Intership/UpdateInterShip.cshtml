@model PortfolioProjectNight.Models.Intership
@{
    ViewBag.Title = "UpdateInterShip";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Staj Güncelleme Sayfasi</h2>

<form method="post">
    @Html.HiddenFor(x => x.IntershipID)
    <label>Okul Türü</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <label>Okul Adi</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Deneyim Aciklamasi</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>
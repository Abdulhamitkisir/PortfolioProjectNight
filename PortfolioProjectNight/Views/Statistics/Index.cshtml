
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2 class="mb-4">Istatistikler</h2>

<div class="alert alert-success">Toplam Mesaj Sayisi :<b>@ViewBag.totalMessageCount</b></div>
<div class="alert alert-danger">Okunmus Mesaj Sayisi :<b>@ViewBag.messageIsReadTrueCount</b></div>
<div class="alert alert-warning">Okunmamis Mesaj Sayisi :<b>@ViewBag.messageIsReadFalseCount</b></div>
<div class="alert alert-dark">Yetenek Sayisi :<b>@ViewBag.skillCount</b></div>
<div class="alert alert-info">Yeteneklerin Toplam Puani :<b>@ViewBag.skillRateSum</b></div>
<div class="alert alert-primary">Yeteneklerin Ortalama Puani :<b>@ViewBag.skillRateAvg</b></div>
<div class="alert alert-primary" style="background-color:#ff6a00">En Yüksek Puanli Yetenek :<b>@ViewBag.maxRateSkillname</b></div>
<div class="alert alert-primary" style="background-color:#808080">Referans Konulu Mesaj Sayisi :<b>@ViewBag.getMessageCountBySubjectReferances</b></div>
<div class="alert alert-primary" style="background-color:#76e00c">Icinde H harfi gecen okunmus mesaj sayisi :<b>@ViewBag.getMessageCountByEmailContainhadnIsReadTrue</b></div>
<div class="alert alert-primary" style="background-color:#ffd800">Rate i 90 olan Skill Sayisi :<b>@ViewBag.getSkillNameByRate90</b></div>




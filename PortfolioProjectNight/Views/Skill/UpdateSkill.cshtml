@model PortfolioProjectNight.Models.Skill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yetenek Güncelleme Listesi</h2>

<form method="post">
    @Html.HiddenFor(x => x.SkillId)
    <label>Yetenek Basligi</label>
    @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
    <br />
    <label>Yetenek Degeri</label>
    @Html.TextBoxFor(x => x.Rate, new { @class = "form-control" })
    <br />
    <label>Status</label>
    <select name="Status" class="form-control">
        <option>True</option>
        <option>False</option>
    </select>
    <br />
    <label>Yetenek Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>


<i class="fa-regular fa-layer-group"></i>